@model IEnumerable<UserApplication.Models.EmailDepartments>


@section styles {
    <style>
        td .btn-primary, .btn-danger {
            padding: .175rem .55rem;
        }

        table {
            table-layout: fixed;
            font-size: 13px;
        }
    </style>
}


    <div>
