@model UserApplication.ViewModels.DetailUserViewModel

@{
    ViewBag.Title = "ViewProfile";
}




<div>
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Profile</strong>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.FirstName, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.LastName, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.UserName, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.Email, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.RoleName, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CNIC, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.CNIC, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-3 font-weight-bold" })

                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>


                    </div>
                    <div class="card-footer">
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "Users")">
                            <i class="fa fa-dot-circle-o"></i> Back
                        </a>
                    </div>
                </div>
                </div>
            </div>

        </div>
    </div>
