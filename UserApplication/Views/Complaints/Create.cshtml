@model UserApplication.Models.Complaint

@{



}

@section styles {

    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }

        .select2-search__field, .select2-search__field2 {
            height: 32px !important;
            margin-top: -3px !important;
            font-size: 12px !important;
        }

        .btn-light {
            background-color: white !important;
            color: dimgray !important;
        }
    </style>

}





<div class="animated fadeIn">


    <div class="container col-md-12">



        @using (Html.BeginForm())
        {


            <div class="card">
                <div class="card-header text-center">

                </div>
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })


                    <div class="row col-12">



                        <div class="col-md-4">

                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group row">

                                        @Html.LabelFor(model => model.ComplaintDate, htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })


                                        <span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span>
                                        @Html.EditorFor(model => model.ComplaintDate, new { htmlAttributes = new { @class = "col-md-6 form-control" } })
                                        @Html.ValidationMessageFor(model => model.ComplaintDate, "", new { @class = "text-danger" })


                                    </div>
                                    <div class="form-group row">


                                        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                                        <span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span>



                                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = " col-md-6 form-control", @placeholder = "أدخل رقم الهاتف", tabindex = 1 })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group row">

                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                                        <div class="col-md-7">

                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "البريد الإلكتروني", tabindex = 1 })



                                        </div>
                                    </div>


                                    <div class="form-group row">

                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                                        <span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span>
                                        <div class="col-md-6">

                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "الاسم", tabindex = 1 })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                        </div>
                                    </div>



                                    <div class="form-group row">

                                        @Html.LabelFor(model => model.EmirateID, htmlAttributes: new { @class = "col-md-5 col-form-label font-weight-bold" })
                                        <div class="col-md-4">

                                            @Html.TextBoxFor(model => model.EmirateID, new { @class = "form-control", @placeholder = "المنطقة", tabindex = 1 })




                                        </div>

                                    </div>
                                    <div class="form-group row">





                                        @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "col-md-5 col-form-label font-weight-bold" })
                                        <div class="col-md-4">

                                            @Html.TextBoxFor(model => model.Area, new { @class = "form-control", @placeholder = "الجهة", tabindex = 1 })


                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>



                        <div class="col-md-4">

                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group row" id="checkbox1">
                                        <label class="col-md-10 col-md-offset-9 col-form-label font-weight-bold"> :الملاحظة واردة على<span style=" color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                        <div class="col-md-10">
                                            <div class="row" style="margin-top:5px;">
                                                <div class="col-md-4">
                                                    <label style="font-size:12px;" name="SchoolTransportService"> خدمات النقل المدرسي @Html.CheckBoxFor(model => model.SchoolTransportService, new { tabindex = 3 })</label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label style="font-size:12px;" name="LogisticsService"> الخدمات اللوجستية  @Html.CheckBoxFor(model => model.LogisticsService, new { tabindex = 4 })</label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label style="font-size:12px;" name="TransportationRentalService"> خدمات النقل والتأجير  @Html.CheckBoxFor(model => model.TransportationRentalService, new { tabindex = 5 })</label>
                                                </div>


                                            </div>
                                        </div>

                                    </div>

                                    <div id="checkbox2">
                                        <div class="form-group row">
                                            <label class="col-md-8 col-md-offset-10 col-form-label font-weight-bold"> :نوع السجل<span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                            <div class="col-md-12">

                                                <div class="row" style="margin-top:5px;">
                                                    <div class="col-md-3">
                                                        <label style="font-size:12px;" name="AdministrativeNote"> ملاحظةإدراية @Html.CheckBoxFor(model => model.AdministrativeNote, new { tabindex = 3 })</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label style="font-size:12px;" name="ExecutiveNote"> ملاحظةتنفيذية  @Html.CheckBoxFor(model => model.ExecutiveNote, new { tabindex = 4 })</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label style="font-size:12px;" name="TechnicalNote"> ملاحظة فنية  @Html.CheckBoxFor(model => model.TechnicalNote, new { tabindex = 5 })</label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label style="font-size:12px;" name="Acknowledgment"> شكروتقدير  @Html.CheckBoxFor(model => model.Acknowledgment, new { tabindex = 6 })</label>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>


                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label style="font-size:12px;" name="Other"> أخرى تذكر  @Html.CheckBoxFor(model => model.Other, new { tabindex = 5 })</label>
                                            </div>




                                            @Html.LabelFor(model => model.OthersDiscription, htmlAttributes: new { @class = "control-label col-md-" })
                                            <div class="col-md-5">
                                                @Html.EditorFor(model => model.OthersDiscription, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.OthersDiscription, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>



                                    <div class="form-group row">

                                        @Html.LabelFor(model => model.ChannelOfReceivingID, htmlAttributes: new { @class = "control-label col-md-0 col-md-offset-1 font-weight-bold" })
                                        <span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span>
                                        <div class="col-md-8">
                                            @Html.EditorFor(model => model.ChannelOfReceivingID, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ChannelOfReceivingID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="col-md-4">

                            <div class="card">
                                <div class="card-body text-center">
                                    <div class="form-group row">

                                        <div class="col-md-5 font-weight-bold">

                                            @Html.Label(":تصنيف السجل")
                                            <span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span>
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-md-offset-4">

                                            <div>
                                                @Html.DropDownListFor(model => model.FieldOfComplaintID, ViewBag.Field as SelectList, "نطاق الشكوى", new { style = "width: 200px;" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-md-offset-4">
                                            <div>
                                                @Html.DropDownListFor(model => model.AreaOfComplaintID, ViewBag.Area as SelectList, "مجال الشكوى", new { style = "width: 200px;" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4 col-md-offset-4">
                                            <div>
                                                @Html.DropDownListFor(model => model.ChannelOfComplaintID, ViewBag.Channel as SelectList, "القناة/ الفئة المتأثر بالشكوى", new { style = "width: 200px;" })

                                            </div>
                                        </div>


                                    </div>



                                    <div class="form-group row">
                                        <label class="col-md-4 col-md-offset-10 col-form-label font-weight-bold"> :تكرارا الملاحظة</label>

                                        <div class="col-md-10 col-md-offset-1">
                                            <div class="row" style="margin-top:5px;">
                                                <div class="col-md-3 col-md-offset-10">
                                                    <label style="font-size:12px;" name="IsExisiting"> معاد @Html.CheckBoxFor(model => model.IsExisiting, new { tabindex = 3 })</label>
                                                </div>


                                            </div>
                                        </div>

                                    </div>





                                    <div class="form-group row" id="checkbox3">
                                        <label class="col-md-4 col-md-offset-0 col-form-label font-weight-bold"> :الأولوية<span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                        <div class="col-md-10 col-md-offset-4">
                                            <div class="row" style="margin-top:5px;">
                                                <div class="col-md-3">
                                                    <label style="font-size:12px;" name="Complicated"> عادية @Html.CheckBoxFor(model => model.Complicated, new { tabindex = 3 })</label>
                                                </div>
                                                <div class="col-md-3">
                                                    <label style="font-size:12px;" name="Urgent"> طارئة  @Html.CheckBoxFor(model => model.Urgent, new { tabindex = 4 })</label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label style="font-size:12px;" name="Normal"> معقدة  @Html.CheckBoxFor(model => model.Normal, new { tabindex = 5 })</label>
                                                </div>

                                            </div>
                                        </div>

                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">

                    <button class="btn btn-md btn-primary mr-3"  type="submit" tabindex="13" id="btnSubmit">
                        <i class="fa fa-dot-circle-o"></i>Create
                    </button>

                    <a class="btn btn-md btn-primary ml-3" href="@Url.Action("Index", "Complaints")" tabindex="14">
                        <i class="fa fa-close"></i>Cancel
                    </a>






                </div>
            </div>



        }
    </div>
</div>




@section Scripts {
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(function () {
            $("#btnSubmit").click(function () {
                var checked_checkboxes = $("#checkbox3 input[type=checkbox]:checked");
                if (checked_checkboxes.length == 0) {
                    Swal.fire({
                        title: 'الأولوية',
                        text: "Please select atleast one",
                        type: 'warning',
                        showCancelButton: false,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                    return false;
                }
                return true;
            });
        });

        $(function () {
            $("#btnSubmit").click(function () {
                var checked_checkboxes = $("#checkbox2 input[type=checkbox]:checked");
                if (checked_checkboxes.length == 0) {
                    Swal.fire({
                        title: 'نوع السجل',
                        text: "Please select atleast one",
                        type: 'warning',
                        showCancelButton: false,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                    return false;
                }
                return true;
            });
        });

        $(function () {
            $("#btnSubmit").click(function () {
                var checked_checkboxes = $("#checkbox1 input[type=checkbox]:checked");
                if (checked_checkboxes.length == 0) {
                    Swal.fire({
                        title: 'الملاحظة واردة على',
                        text: "Please select atleast one",
                        type: 'warning',
                        showCancelButton: false,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                    return false;
                }
                return true;
            });
        });




    </script>



    }