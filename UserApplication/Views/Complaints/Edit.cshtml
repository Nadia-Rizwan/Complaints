                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Acknowledgment, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.Acknowledgment)
                                                            @Html.ValidationMessageFor(model => model.Acknowledgment, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Other, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.Other)
                                                            @Html.ValidationMessageFor(model => model.Other, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.OthersDiscription, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        @Html.EditorFor(model => model.OthersDiscription, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.OthersDiscription, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <label class="col-md-8 col-md-offset-10 col-form-label font-weight-bold">:تصنيف السجل<span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                                <div class="form-group row">
                                                    <div class="col-md-8">
                                                        @Html.DropDownList("AreaOfComplaintID", null, "Select area", htmlAttributes: new { @class = "form-control col-md-8", tabindex = 7 })

                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-md-8">

                                                        @Html.DropDownList("ChannelOfComplaintID", null, "Select Channel", htmlAttributes: new { @class = "form-control col-md-8", tabindex = 7 })
                                                    </div>
                                                </div>
                                                <div class="form-group row">

                                                    <div class="col-md-8">

                                                        @Html.DropDownList("FieldOfComplaintID", null, "Select Field", htmlAttributes: new { @class = "form-control col-md-8", tabindex = 7 })
                                                    </div>
                                                </div>

                                                <label class="col-md-4 col-md-offset-10 col-form-label font-weight-bold"> :الأولوية<span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Normal, htmlAttributes: new { @class = "control-label col-md-3" })
                                                    <div class="col-md-5">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.Normal)
                                                            @Html.ValidationMessageFor(model => model.Normal, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Urgent, htmlAttributes: new { @class = "control-label col-md-3" })
                                                    <div class="col-md-5">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.Urgent)
                                                            @Html.ValidationMessageFor(model => model.Urgent, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Complicated, htmlAttributes: new { @class = "control-label col-md-3" })
                                                    <div class="col-md-5">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.Complicated)
                                                            @Html.ValidationMessageFor(model => model.Complicated, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                        </div>
                                    </div>

                                </div>


                                <div class="card-footer">
                                    <button class="btn btn-md btn-primary mr-3" type="submit" tabindex="10">
                                        <i class="fa fa-dot-circle-o"></i> Save
                                    </button>
                                    <a class="btn btn-md btn-primary ml-3" href="@Url.Action("Index", "Complaints")" tabindex="11">
                                        <i class="fa fa-close"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
            </div>
            @section Scripts {

                <script src="~/Scripts/bootstrap-select.min.js"></script>

                @Scripts.Render("~/bundles/jqueryval")





            }
