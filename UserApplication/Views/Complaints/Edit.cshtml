@model UserApplication.Models.Complaint

@{
    ViewBag.Title = "Edit Complaint";

}


@section styles {
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }

        .select2-search__field, .select2-search__field2 {
            height: 32px !important;
            margin-top: -3px !important;
            font-size: 12px !important;
        }

        .btn-light {
            background-color: white !important;
            color: dimgray !important;
        }
    </style>
}

    <div>
        <div class="animated fadeIn">
            <div class="row">
             

                <div class="col-sm-12">

                    @using (Html.BeginForm("Edit", "Complaints", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                     
                        <div class="card">
                            <div class="card-header">
                                <h4> @ViewBag.Title</h4>
                            </div>
                            <div class="card-body">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                @Html.AntiForgeryToken()


                                <div class="row col-12">




                                    <div class="col-5">

                                        <div class="card">
                                            <div class="card-body">

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.ComplaintDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-8">

                                                        @Html.HiddenFor(model => model.ID)
                                                        @Html.EditorFor(model => model.ComplaintDate, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.ComplaintDate, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-8">
                                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-8">
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-8">
                                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.EmirateID, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.EmirateID, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.EmirateID, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.Area, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <label class="col-md-10 col-md-offset-9 col-form-label font-weight-bold"> :الملاحظة واردة على<span style=" color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>
                                                <div class="form-group row">

                                                    @Html.LabelFor(model => model.SchoolTransportService, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.SchoolTransportService)
                                                            @Html.ValidationMessageFor(model => model.SchoolTransportService, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">

                                                    @Html.LabelFor(model => model.LogisticsService, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.LogisticsService)
                                                            @Html.ValidationMessageFor(model => model.LogisticsService, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.TransportationRentalService, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.TransportationRentalService)
                                                            @Html.ValidationMessageFor(model => model.TransportationRentalService, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <label class="col-md-4 col-md-offset-10 col-form-label font-weight-bold"> :تكرارا الملاحظة</label>
                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.IsExisiting, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.IsExisiting)
                                                            @Html.ValidationMessageFor(model => model.IsExisiting, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>


                                                </div>

                                                <label class="col-md-4 col-md-offset-10 col-form-label font-weight-bold"> :قناة الاستلام</label>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.ChannelOfReceivingID, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-5">
                                                        @Html.EditorFor(model => model.ChannelOfReceivingID, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.ChannelOfReceivingID, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-5">

                                        <div class="card">
                                            <div class="card-body">
                                                <label class="col-md-8 col-md-offset-10 col-form-label font-weight-bold"> :نوع السجل<span style="color: #f86c6b;font-weight:bold;font-size:20px;">*</span></label>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.AdministrativeNote, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
                                                        <div class="checkbox">
                                                            @Html.EditorFor(model => model.AdministrativeNote)
                                                            @Html.ValidationMessageFor(model => model.AdministrativeNote, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    @Html.LabelFor(model => model.ExecutiveNote, htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-0">
